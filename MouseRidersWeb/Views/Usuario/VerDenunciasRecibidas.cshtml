@model IEnumerable<MouseRidersWeb.DTO.DenunciaDTO>

@{
    ViewBag.Title = "VerDenunciasRecibidas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Gestión de Bloqueo</h2>


<div class="table-responsive">
    <table class="table table-condensed table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivo)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-xs btn-block " })
                    @Html.ActionLink("Ver Permiso", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs btn-block " })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs btn-block " })
                </td>
            </tr>

        }

    </table>
    @Html.ActionLink("Bloquear Usuario", "Bloquear", "Usuario", new { id = Request.Params["usu"] }, new { @class = "btn btn-default btn-lg btn-block " })
</div>