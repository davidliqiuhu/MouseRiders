@{
    ViewBag.Title = "Upload1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Upload", "Usuario", FormMethod.Post,
        new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend class="psection">Foto de perfil</legend>
        <div class="editor-field">
            @Html.TextBox("file", "", new { type = "file" })
        </div>
        <p></p>
        <div class="editor-field">
            <input type="submit" class="btn-lg btn-success" value="Subir Foto" />
        </div>
    </fieldset>
}
