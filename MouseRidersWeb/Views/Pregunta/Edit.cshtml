@model MouseRidersWeb.DTO.PreguntaDTO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Editar Pregunta</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label ptitle">
            Pregunta
        </div>
        <div class="custom-field">
            @Html.EditorFor(model => model.Pregunta)
            @Html.ValidationMessageFor(model => model.Pregunta)
        </div>

        <p>
            <input type="submit" class="btn-lg btn-success" value="Guardar Cambios" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver", "Index","pregunta", new { @class = "btn btn-default btn-lg btn-block"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
