@model IEnumerable<MouseRidersGenNHibernate.EN.MouseRiders.ArticuloEN>

@{
    ViewBag.Title = "Buscar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Búsqueda de Artículos</h2>

<div class="table-responsive">
    <table class="table table-condensed table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtitulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntuacion)
            </th>
            
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/Articulo/Details/@item.Id">@Html.DisplayFor(modelItem => item.Titulo)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subtitulo)
                </td>
                <td class="bicho">
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puntuacion)
                </td>   
            </tr>
        }

    </table>
</div>