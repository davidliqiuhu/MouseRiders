@model IEnumerable<MouseRidersWeb.DTO.SeccionDTO>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Gestión de Secciones</h2>

<p>
    @Html.ActionLink("Crear nueva sección", "Create", "Seccion", null, new { @class = "btn btn-default btn-lg btn-block " })
</p>

<div class="table-responsive">
    <table class="table table-condensed table-striped">
        <tr>
            <th>
                Sección
            </th>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item != null) { 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Seccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Seccion }, new { @class = "btn btn-default btn-xs btn-block " })
                    @Html.ActionLink("Detalle", "Details", new { id = item.Seccion }, new { @class = "btn btn-info btn-xs btn-block " })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Seccion }, new { @class = "btn btn-danger btn-xs btn-block " })
                </td>
            </tr>
        }
        }
        
    </table>
</div>