@model MouseRidersWeb.DTO.HiloDTO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Eliminar Hilo</h2>

<h3>¿Está seguro de que desea eliminar el siguiente hilo?</h3>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title ptitle text-uppercase">@Html.DisplayFor(model => model.Titulo)</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class=" col-md-12 col-lg-12 ">
                    <table class="table table-user-information">
                        <tbody class="pprofile">
                            <tr>
                                <td>Título del hilo</td>
                                <td>@Html.DisplayFor(model => model.Titulo)</td>
                            </tr>
                            <tr>
                                <td>Fecha</td>
                                <td>@Html.DisplayFor(model => model.Fecha)</td>
                            </tr>
                            <tr>
                                <td>Creador</td>
                                <td>@Html.DisplayFor(model => model.Creador)</td>
                            </tr>

                            <tr>
                                <td>Número de comentarios</td>
                                <td>@Html.DisplayFor(model => model.NumComentarios)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" class="btn-lg btn-danger btn-block" value="Eliminar" />
        </p>
        <p>
            @Html.ActionLink("Volver", "Index", "Hilo", null, new { @class = "btn btn-default btn-lg btn-block " })
        </p>
        
    }
</div>

