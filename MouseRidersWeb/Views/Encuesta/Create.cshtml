@model MouseRidersWeb.DTO.EncuestaDTO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Nueva Encuesta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label ptitle">
            Título
        </div>
        <span class="custom-field">
            @Html.EditorFor(model => model.titulo)
            @Html.ValidationMessageFor(model => model.titulo)
        </span>
        <div class="editor-label ptitle">
            Descripción
        </div>
        <div class="custom-field">
            @Html.EditorFor(model => model.descripcion)
            @Html.ValidationMessageFor(model => model.descripcion)
        </div>

        <div class="editor-label ptitle">
            Privacidad
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.privacidad)
            @Html.ValidationMessageFor(model => model.privacidad)
        </div>
        <fieldset>

            @if (Model != null)
            {
                if (Model.Tiene != null)
                {
                    for (int i = 0; i < Model.Tiene.Count; i++)
                    {
                        var item = Model.Tiene[i];
                        <p>
                            Pregunta numero @(i + 1)
                            @Html.RadioButtonFor(itemModel => item.Tipo, MouseRidersGenNHibernate.Enumerated.MouseRiders.T_PreguntaEnum.numerico, new { id = MouseRidersGenNHibernate.Enumerated.MouseRiders.T_PreguntaEnum.numerico })
                            <label for=@MouseRidersGenNHibernate.Enumerated.MouseRiders.T_PreguntaEnum.numerico>@MouseRidersGenNHibernate.Enumerated.MouseRiders.T_PreguntaEnum.numerico</label>
                            @Html.RadioButtonFor(itemModel => item.Tipo, MouseRidersGenNHibernate.Enumerated.MouseRiders.T_PreguntaEnum.radio, new { id = MouseRidersGenNHibernate.Enumerated.MouseRiders.T_PreguntaEnum.radio })
                            <label for=@MouseRidersGenNHibernate.Enumerated.MouseRiders.T_PreguntaEnum.radio>@MouseRidersGenNHibernate.Enumerated.MouseRiders.T_PreguntaEnum.radio</label>
                        </p>
                        <div class="editor-field">
                            @Html.EditorFor(itemModel => item.Pregunta)
                            @Html.ValidationMessageFor(itemModel => item.Pregunta)
                        </div>
                        <fieldset>
                            @for (int j = 0; j < item.Tiene.Count; j++)
                            {
                                var respuesta = item.Tiene[j];
                                <p>Respuesta numero @(j + 1)</p>
                                <div class="editor-field">
                                    @Html.EditorFor(respuestaModel => respuesta.Respuesta)
                                    @Html.ValidationMessageFor(respuestaModel => respuesta.Respuesta)
                                </div>
                            }
                        </fieldset>
                    }
                }
            }

        </fieldset>
        <p>
            <input type="submit" class="btn-lg btn-block btn-success" value="Crear Encuesta" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver", "Index", "Hilo", null, new { @class = "btn btn-default btn-lg btn-block" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
