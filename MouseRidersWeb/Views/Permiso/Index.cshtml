@model IEnumerable<MouseRidersWeb.DTO.PermisoDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Gestión de Permisos</h2>

<p>
    @Html.ActionLink("Crear nuevo permiso", "Create", "Usuario", null, new { @class = "btn btn-default btn-lg btn-block " })
</p>
<div class="table-responsive">
    <table class="table table-condensed table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Permisos)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Permisos)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Rol }, new { @class = "btn btn-default btn-xs btn-block " })
                    @Html.ActionLink("Ver Permiso", "Details", new { id = item.Rol }, new { @class = "btn btn-info btn-xs btn-block " })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Rol }, new { @class = "btn btn-danger btn-xs btn-block " })
                </td>
            </tr>
        }

    </table>
</div>