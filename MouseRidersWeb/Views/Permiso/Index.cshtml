@model IEnumerable<MouseRidersWeb.DTO.PermisoDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Gestión de Permisos</h2>

<p>
    @Html.ActionLink("Crear nuevo permiso", "Create", "Permiso", null, new { @class = "btn btn-default btn-lg btn-block " })
</p>
<div class="table-responsive">
    <table class="table table-condensed table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol)
                </td>
                <td>
                    @Html.ActionLink("Ver Permisos", "Permisos", new { rol = item.Rol, permiso = item.Permiso }, new { @class = "btn btn-info btn-xs btn-block " })
                </td>
            </tr>
        }

    </table>
</div>