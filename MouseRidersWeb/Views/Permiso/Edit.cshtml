@model MouseRidersWeb.DTO.PermisoDTO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Modificar Permiso</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.Permiso)
        </div>
        <div class="custom-field">
            @Html.EditorFor(model => model.Permiso)
            @Html.ValidationMessageFor(model => model.Permiso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Permisos)
        </div>
        <div class="custom-field">
            @Html.EditorFor(model => model.Permisos)
            @Html.ValidationMessageFor(model => model.Permisos)
        </div>

        <p>
            <input type="submit" value="Guardar cambios" class="btn btn-primary btn-lg btn-block" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver", "Index", null, new { @class="btn btn-default btn-lg btn-block"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
