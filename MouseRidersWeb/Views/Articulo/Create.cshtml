@model MouseRidersWeb.DTO.ArticuloDTO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Nuevo Artículo</h2>

@using (Html.BeginForm("Create", "Articulo", FormMethod.Post,
        new { enctype = "multipart/form-data" })) { 
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.Titulo)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.Fecha)
            @Html.ValidationMessageFor(model => model.Fecha)
        </div>

        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.Autor)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.Autor)
            @Html.ValidationMessageFor(model => model.Autor)
        </div>

        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.Puntuacion)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.Puntuacion)
            @Html.ValidationMessageFor(model => model.Puntuacion)
        </div>

        <div class="editor-label ptitle">
            @Html.Label("file","Contenido")
        </div>
            <div class="custom-field penhanced">
                @Html.TextBox("file", "", new { type = "file" })
            </div>
        <div class="editor-label ptitle">
            @Html.Label("file_des", "Contenido Descargable")
        </div>
        <div class="custom-field penhanced">
            @Html.TextBox("file_des", "", new { type = "file" })
        </div>
        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.Contador)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.Contador)
            @Html.ValidationMessageFor(model => model.Contador)
        </div>

        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.Subtitulo)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.Subtitulo)
            @Html.ValidationMessageFor(model => model.Subtitulo)
        </div>

        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.Portada)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.Portada)
            @Html.ValidationMessageFor(model => model.Portada)
        </div>

        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.Descripcion)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <p>
            <input type="submit" class="btn-lg btn-block btn-success" value="Crear nuevo artículo" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver", "Index", "Articulo", null, new { @class = "btn btn-default btn-lg btn-block" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
