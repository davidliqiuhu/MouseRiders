@model MouseRidersWeb.DTO.ControladorNotificacionesDTO

@{
    ViewBag.Title = "Notificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Crear Notificación</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.asunto)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.asunto)
            @Html.ValidationMessageFor(model => model.asunto)
        </div>

        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.texto)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.texto)
            @Html.ValidationMessageFor(model => model.texto)
        </div>

        <div class="editor-label ptitle">
            @Html.LabelFor(model => model.adjunto)
        </div>
        <div class="custom-field penhanced">
            @Html.EditorFor(model => model.adjunto)
            @Html.ValidationMessageFor(model => model.adjunto)
        </div>

        <p>
            <input type="submit" class="btn-lg btn-success btn-block" value="Crear Notificación" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver", "MensajePorTipo", "Mensaje", new { tipo = "notificacion" }, new { @class = "btn btn-default btn-lg btn-block" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
