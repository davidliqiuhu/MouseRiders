@model IEnumerable<MouseRidersWeb.DTO.ComentarioDTO>

<table id="prueba">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Creador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contenido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valoracion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Creador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contenido)
            </td>
          
            <td>
                @using (Ajax.BeginForm("AnyadirEstrellas", "Comentario", new { id = item.Id},
                 new AjaxOptions
                 {
                     HttpMethod = "post"
                 }))
                {
                    <input type="hidden" name="valoracion" value="0">
                    <div id="stars-existing" class="starrr" data-rating='@Html.DisplayFor(modelItem => item.Valoracion)'>

                    </div>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>