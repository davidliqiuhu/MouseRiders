@model MouseRidersWeb.DTO.MensajeDTO

@{
    ViewBag.Title = "Solicitar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="customh2">Solicitar un puesto</h2>
<p class="psection">
    ¿Quieres unirte a nosotros? ¡Explicanos brevemente tus inspiraciones y cualidades, déjanos tu curriculum y puede que te fichemos!
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-label">
            <strong>Explica aquí por qué quieres unirte a MouseRiders:</strong>
        </div>
        <div class="editor-field">
            @Html.TextArea("PrimerComentario", new { rows = 8, id = "comentar", @placeholder = "Escriba aquí su comentario" })
            @Html.ValidationMessageFor(model => model.Texto)
        </div>

        <div class="form-group">
            <label for="AdjuntoR">Adjunta tu Currículum</label>
            <input type="file" class="form-control" id="AdjuntoR" name="file" />
        </div>

        <input type="submit" class="btn btn-primary" value="Enviar solicitud" />
    </fieldset>
}

@Html.ActionLink("Volver", "Index", "Redaccion", null, new { @class = "btn-secondary2 btn-lg", style = "text-decoration:none" })

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
