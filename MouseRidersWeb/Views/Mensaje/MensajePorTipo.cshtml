@model IEnumerable<MouseRidersWeb.DTO.MensajeDTO>

@{
    ViewBag.Title = "MensajePorTipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Request.Params["tipo"].ToString() == "notificacion")
{
    <h2 class="customh2">Notificaciones</h2>
    @Html.ActionLink("Enviar Nueva Notificación", "Notificar", "ControladorNotificaciones", null,new { @class = "btn btn-default btn-lg btn-block " })
    <br />
}
@if (Request.Params["tipo"].ToString() == "solicitud")
{
    <h2 class="customh2">Solicitudes</h2>
}
@if (Request.Params["tipo"].ToString() == "solicitud")
{
    <h2 class="customh2">Solicitudes</h2>
}

<div class="table-responsive">
    <table class="table table-condensed table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Asunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destinatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adjunto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Asunto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destinatario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Texto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adjunto)
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs btn-block " })
                    
                </td>
            </tr>
        }

    </table>
</div>