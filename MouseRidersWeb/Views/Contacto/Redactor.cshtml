@{
    ViewBag.Title = "Redactor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Contactar con un redactor</h2>
<p class="psection">
    Envía un mensaje a nuestros redactores. Uno de los miembros del equipo de redacción recibirá tu mensaje y se pondrá en contacto contigo si es necesario.
</p>
<form>
    <fieldset>
        <div class="form-group">
            <label for="AsuntoR">Asunto</label>
            <input type="text" class="form-control" id="AsuntoR" />
        </div>

        <div class="form-group">
            <label for="ContenidoR">Contenido</label>
            <textarea class="form-control" id="ContenidoR" rows="10"></textarea>
        </div>

        <div class="form-group">
            <label for="AdjuntoR">Adjuntar un archivo</label>
            <input type="file" class="form-control" id="AdjuntoR" />
        </div>

        <button type="submit" class="btn btn-primary">Enviar mensaje a Redactor</button>
    </fieldset>
</form>

@Html.ActionLink("Volver", "Index", "Redaccion", null, new { @class = "btn-secondary2 btn-lg", style = "text-decoration:none" })