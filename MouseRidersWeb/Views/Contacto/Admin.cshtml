@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="customh2">Contactar con un administrador</h2>
<p class="psection">
    Envia un mensaje a nuestros administradores. Uno de ellos lo recibirá y te responderá lo antes posible
</p>
<form>
    <fieldset>
        <div class="form-group">
            <label for="AsuntoA">Asunto</label>
            <input type="text" class="form-control" id="AsuntoA" />
        </div>

        <div class="form-group">
            <label for="ContenidoA">Mensaje</label>
            <textarea class="form-control" id="ContenidoA" rows="10"></textarea>
        </div>

        <div class="form-group">
            <label for="AdjuntoA">Adjuntar un archivo</label>
            <input type="file" class="form-control" id="AdjuntoA" />
        </div>

        <button type="submit" class="btn btn-primary">Enviar mensaje a Redactor</button>
    </fieldset>
</form>

@Html.ActionLink("Volver", "Index", "Redaccion", null, new { @class = "btn-secondary2 btn-lg", style = "text-decoration:none" })